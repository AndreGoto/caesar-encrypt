<h1>Let's encrypt your text !</h1>
<form action="<%= encrypt_path %>" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <textarea name="text" id="" cols="30" rows="10" class="form-control"></textarea>
  </div>
  <div class="form-group">
    <input type="number" name="permutation_level">
  </div>
  <input type="submit" value="Encrypt" class="btn btn-primary">
</form>
